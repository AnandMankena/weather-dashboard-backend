{
  "name": "weather-dashboard-backend",
  "version": "1.0.0",
  "description": "Weather Dashboard Backend API",
  "main": "dist/server.js",
  "scripts": {
  "dev": "nodemon src/server.ts",
  "build": "npx tsc",
  "start": "node dist/server.js",
  "migrate": "npx prisma migrate deploy",
  "generate": "npx prisma generate",
  "db:generate": "prisma generate",
  "db:push": "prisma db push", 
  "db:seed": "ts-node src/seedCities.ts",
  "postinstall": "npm run generate"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "axios": "^1.6.0",
    "node-cache": "^5.1.2",
    "sqlite3": "^5.1.6",
    "prisma": "^5.6.0",
    "@prisma/client": "^5.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.9.0",
    "typescript": "^5.2.2",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1"
  }
}
